[
  {
    "name": "App Store Receipts",
    "description": "Organizes App Store/iCloud receipts - matches your Hazel rule!",
    "conditions": {
      "extension": "pdf",
      "content_contains": ["receipt", "icloud"]
    },
    "actions": {
      "rename_pattern": "App Store_{date}_{year}{ext}",
      "move_to": "Receipts"
    }
  },
  {
    "name": "Bank Statements",
    "description": "Organizes bank statements by year",
    "conditions": {
      "extension": "pdf",
      "content_contains": ["statement", "account", "balance"]
    },
    "actions": {
      "rename_pattern": "Bank_Statement_{date}{ext}",
      "move_to": "Banking/Statements"
    }
  },
  {
    "name": "Invoices",
    "description": "Organizes invoices with date and year",
    "conditions": {
      "extension": "pdf",
      "content_contains": ["invoice"]
    },
    "actions": {
      "rename_pattern": "Invoice_{date}_{year}{ext}",
      "move_to": "Invoices"
    }
  },
  {
    "name": "Tax Documents",
    "description": "Organizes tax-related PDFs",
    "conditions": {
      "extension": "pdf",
      "content_contains": ["tax", "irs"]
    },
    "actions": {
      "rename_pattern": "Tax_{year}_{date}{ext}",
      "move_to": "Taxes"
    }
  },
  {
    "name": "Utility Bills",
    "description": "Organizes utility bills (electricity, water, gas, internet)",
    "conditions": {
      "extension": "pdf",
      "content_contains": ["bill", "utility"]
    },
    "actions": {
      "rename_pattern": "Utility_Bill_{date}{ext}",
      "move_to": "Bills/Utilities"
    }
  }
]
